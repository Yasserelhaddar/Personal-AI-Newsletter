# Personal AI Newsletter Generator - Environment Configuration

# API Keys (Required)
NEWSLETTER_OPENAI_API_KEY=sk-...
NEWSLETTER_RESEND_API_KEY=re_...
NEWSLETTER_FIRECRAWL_API_KEY=fc-...
NEWSLETTER_GITHUB_TOKEN=ghp_...

# Domain Configuration (Required)
NEWSLETTER_DOMAIN=yourdomain.com

# Content Quality Thresholds
NEWSLETTER_CONTENT_COMPOSITE_SCORE_THRESHOLD=0.2
NEWSLETTER_CONTENT_QUALITY_SCORE_THRESHOLD=0.2
NEWSLETTER_CONTENT_FALLBACK_SCORE_THRESHOLD=0.1
NEWSLETTER_CONTENT_QUALITY_SCORE_DEFAULT=0.5

# OpenAI Configuration
NEWSLETTER_OPENAI_MODEL=gpt-4
NEWSLETTER_OPENAI_MAX_TOKENS=4000
NEWSLETTER_OPENAI_TEMPERATURE=0.1

# Content Collection Settings
NEWSLETTER_MAX_ITEMS_PER_SOURCE=20
NEWSLETTER_CONTENT_READING_WORDS_PER_MINUTE=200
NEWSLETTER_CONTENT_MAX_READING_TIME=15

# Reddit Content URLs
NEWSLETTER_REDDIT_AI_SUBREDDITS_URL=https://www.reddit.com/r/MachineLearning+artificial+ArtificialIntelligence/.json
NEWSLETTER_REDDIT_COMPUTER_VISION_URL=https://www.reddit.com/r/computervision/.json

# Email Settings
NEWSLETTER_FROM_NAME=TechFlow AI Newsletter
NEWSLETTER_DEFAULT_SEND_TIME=07:00
NEWSLETTER_TIMEZONE=UTC

# Performance Settings
NEWSLETTER_REQUEST_TIMEOUT=30
NEWSLETTER_RETRY_ATTEMPTS=3
NEWSLETTER_MAX_CONCURRENT_COLLECTIONS=5
NEWSLETTER_CONTENT_CACHE_TTL=3600

# Application Settings
NEWSLETTER_DEFAULT_ARTICLES_PER_NEWSLETTER=10
NEWSLETTER_DATABASE_URL=sqlite:///newsletter.db

# Logging
NEWSLETTER_LOG_LEVEL=INFO
NEWSLETTER_LOG_FORMAT=structured